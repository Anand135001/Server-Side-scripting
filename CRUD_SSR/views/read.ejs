<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        
        <a class="text-blue-400 border-2 p-2" href="/">Home</a>
        <h1 class="text-3xl mt-4">All Users</h1>
        <div class="users flex gap-5 mt-3">
        <% if(users.length > 0) { %>

            <%  users.forEach((user)=> {%>        
                <div class="user w-60 bg-zinc-800 p-4 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-red-400 overflow-hidden">
                        <img class="w-full h-full object-cover" src="<%= user.image %>">
                    </div>
                    <h3 class="text-2xl tracking-tighter mt-2"><%= user.name %></h3>
                    <h3 class="text-zinc-500"><%= user.email %></h3>
                    <div class="flex mt-5 gap-5">
                        <a class="text-green-400" href="/edit/<%= user._id %>">Edit user</a>
                        <a class="text-red-400" href="/delete/<%= user._id %>">Delete user</a>
                    </div>  
                </div>
              <% }) %>    
        <% } else { %>
              <h1 class="text-zinc-500">No User</h1>
        <% } %>
             
        </div>
    </div>
</body>
</html>